<article class="user">
  <%= content_tag(
    :span,
    avatar(user, 64, "grey small #{'admin' if user.admin?}"),
    :class => 'status avatar'
  ) %>
  <div class="data">
    <div class="top">
      <%= content_tag(:h4, user.display_name, :class => 'title') %>
    </div>
    <div class="bottom"></div>
  </div>
  <div class="actions">
    <div class="top">
      <%= link_to(
        'Edit',
        builder_route([user], :edit),
        :class => 'edit'
      ) %>
    </div>
    <div class="bottom">
      <%= link_to(
        'Remove',
        builder_route([user], :show),
        :method => :delete,
        :class => 'delete',
        :data => { :confirm => 'This will remove this user from this project.
          Are you sure?' }
      ) if user != current_user && user.site_user? %>
    </div>
  </div>
</article>
