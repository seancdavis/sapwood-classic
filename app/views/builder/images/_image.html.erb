<article class="image" data-src="<%= image.image.url %>" 
  data-idx="<%= image.idx %>" data-thumb="<%= image.image.url(:thumb) %>">
  <%= image_tag image.image.url(:thumb) %>
  <header class="<%= 'select' if params[:select] %>">
    <%= link_to(
      '', 
      builder_site_image_cropper_path(current_site, image),
      :class => 'crop image-crop-trigger'
    ) unless params[:select] %>
    <%= link_to(
      '', 
      builder_route([image], :show), 
      :class => 'delete', 
      :method => :delete, 
      :data => { :confirm => 'Are you sure?' } 
    ) unless params[:select] %>
    <%= link_to(
      'Add This Image', 
      '#', 
      :class => 'select', 
    ) if params[:select] %>
  </header>
</article>
