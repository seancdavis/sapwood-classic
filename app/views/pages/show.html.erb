<%= render 'current_page_header' %>

<section class="page-content">
  <% if current_page_children.size > 0 %>
    <%= simple_form_for(
      :reorder, :url => site_reorder_pages_path(current_site)
    ) do |f| %>
      <%= f.input :pages %>
    <% end %>
    <table class="pages">
      <thead>
        <tr>
          <th class="status-icon"></th>
          <th>Title</th>
          <th>Template</th>
          <th>Last Modified</th>
        </tr>
      </thead>
      <tbody>
        <% current_page_children.each do |page| %>
          <tr class="draggable droppable" data-page="<%= page.slug %>"
              data-page-id="<%= page.id %>">
            <td class="status-icon"><%= page.p.status_icon %></td>
            <td>
              <%= simple_form_for(
                page,
                :url => site_page_nest_path(current_site, page)
              ) do |f| %>
                <%= f.input :parent_id, :input_html => { :class => 'parent' } %>
              <% end %>
              <%= content_tag(:span, page.title, :class => 'title') %>
              <div class="icons">
                <%= icon_to 'right', site_page_path(current_site, page),
                            :class => 'right' %>
                <%= icon_to 'edit',
                            edit_site_page_path(current_site, page),
                            :class => 'edit' %>
                <% if page.published? %>
                  <%= icon_to 'draft',
                              site_page_unpublish_path(
                                current_site, page, :redirect => request.path
                              ),
                              :method => :post, :class => 'unpublish' %>
                <% else %>
                  <%= icon_to 'publish',
                              site_page_publish_path(
                                current_site, page, :redirect => request.path
                              ),
                              :method => :post, :class => 'publish' %>
                <% end %>
                <%= icon_to 'delete', site_page_path(current_site, page),
                            :method => :delete, :class => 'delete',
                            :data => { :confirm => 'Are you sure?' } %>
              </div>
            </td>
            <td><%= page.template.title %></td>
            <td><%= page.updated_at.pretty %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="missing-content">There are no pages here. Use the NEW button to
    create one.</p>
  <% end %>
</section>
