<article class="page">
  <div class="published">
    <%= page_status(page) %>
  </div>
  <%= content_tag(:h4, page.title, :class => 'title') %>
  <%= simple_format(page.description) unless page.description.blank? %>
  <div class="links">
    <%= link_to('Preview', page_path(current_site, current_page_type, page), 
      :target => :blank, :class => 'preview') %>
    <%= link_to('Edit', routes([current_page_type, page])[:edit], :class => 'edit') %>
    <%= link_to('Delete', routes([current_page_type, page])[:show], 
      :method => :delete, :class => 'delete', :data => { 
        :confirm => 'Are you sure?' } ) %>
  </div>
</article>
