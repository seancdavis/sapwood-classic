<div class="site-title">
  <h1>
    <%= link_to('#', :class => 'site-menu-trigger') { 
      content_tag(:i, nil, :class => 'icon-loop2') } %>
    <%= link_to("#{current_site.title} (#{current_site.url})", 
      site_path(current_site)) %>
  </h1>
  <%= site_list %>
</div>
<div class="user">
  <%= avatar(current_user, 84) %>
  <%= content_tag(:span, current_user.display_name.upcase, 
    :class => 'name') %>
  <%= link_to(heartwood.destroy_user_session_path, 
    :class => 'user-menu-trigger') { content_tag(:i, nil, 
      :class => 'icon-exit') } %>
</div>